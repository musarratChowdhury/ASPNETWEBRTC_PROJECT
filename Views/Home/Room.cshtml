<h1 id="roomidtext" class="text-center"> Room ID : @ViewBag.roomId</h1>
<div id="video-grid"></div>
<div class="linkShare">
    <div id="share-link">Share this link to invite friends : <span id="copyTarget"></span></div>
    <button id="copyButton" data-clipboard-target="#copyTarget">Copy</button>
</div>

<div class="container">
    <div class="row p-1">
        <div class="col-1">User</div>
        <div class="col-5"><input type="text" id="userInput" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Message</div>
        <div class="col-5"><input type="text" class="w-100" id="messageInput" /></div>
    </div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>



<script src="~/js/dist/browser/signalr.min.js"></script>
<script src="https://unpkg.com/peerjs@1.4.7/dist/peerjs.min.js"></script>
<script defer src="~/js/room.js"></script>