
<div class="container">
    <h1 id="roomidtext" class="text-center"> 
        <kbd class="kbd kbd-lg"> Room ID : @ViewBag.roomId</kbd>
       </h1>
    <div id="video-grid"></div>
    <div class="linkShare">
        <div id="share-link">Share this link to invite friends : <span id="copyTarget"></span></div>
        <button id="copyButton" class="btn btn-active btn-accent" data-clipboard-target="#copyTarget">Copy</button>
    </div>

    <div class="card w-56 bg-base-100 shadow-xl">
        <div class="card-body">
            <div class="row p-1">
                <div class="col-6">
                    <ul id="messagesList" class="bg-slate-200" style="height:400px; overflow-y:scroll">
                        <div class="chat chat-start">
                            <div class="chat-bubble">It's over Anakin, <br />I have the high ground.</div>
                        </div>
                        <div class="chat chat-end">
                            <div class="chat-bubble">You underestimate my power!</div>
                        </div>
                    </ul>
                </div>
            </div>
            <div class="row p-1">
                <div class="col-1">User</div>
                <input id="userInput" type="text" placeholder="Type here" class="input input-bordered input-info w-full max-w-xs" />
            </div>
            <div class="">
                <div class="col-1">Message</div>
                <div class="col-5">
                    <input id="messageInput" type="text" placeholder="Type here" class="input input-bordered input-info w-full max-w-xs" />
                </div>
            </div>
            <div class="row p-1">
                <div class="col-6 text-end">
                    <input class="btn btn-active btn-primary" type="button" id="sendButton" value="Send Message" />
                </div>
            </div>
            <div class="row p-1">
                <div class="col-6">
                    <hr />
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    document.getElementById("messagesList").scrollTo(0, 99900)
</script>


<script src="~/js/dist/browser/signalr.min.js"></script>
<script src="https://unpkg.com/peerjs@1.4.7/dist/peerjs.min.js"></script>
<script defer src="~/js/room.js"></script>